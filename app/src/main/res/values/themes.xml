<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Recycler" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Them_login" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/buttonLogInColor</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/triadicApp</item>
    </style>

    <style name="Them_log_up" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/buttonLogUpColor</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/triadicApp</item>
    </style>

    <style name="Them_recover" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/buttonSendColor</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/triadicApp</item>
    </style>
</resources>